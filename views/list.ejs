<div class="cards-box">
  <div class="wrapper">
    <div class="container-cards">
      <% cardItems.forEach((card, i) => { %>
             <input type="radio" name="slide" id="<%= card.name %>" <%= i === (cardItems.length - 1) ? "checked" : "" %> >
              <label for="<%= card.name %>" class="card" style="background-image: url('<%= card.url%>')">
                <div class="title-div">
                  <h4 class="title"><%= card.name %></h4>
                </div>
                <div class="row">
                  <div class="icon"><%= i + 1 %></div>
                  <div class="description">
                    <p><%= card.body %></p>
                  </div>
                </div>
              </label>
      <% }) %>

